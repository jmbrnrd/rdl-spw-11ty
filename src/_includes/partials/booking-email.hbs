<!-- RDL BOOKING WIDGET -->
<div class="booking-request-container">
    <form class="form-booking-request"
          id="bkgRequestForm"
          aria-label="Booking request form"
          data-daysinadvance="{{ data.reservations.bkgAdvDays }}"
          data-maxcovers="{{ data.reservations.maxcover }}">
        <div class="selector">
            <div class="selector-substitute">
                <div class="icon icon-covers"></div>
                <div class="selected-value" id="txtCovers">2 {{ bookings.email.covers.people }}</div>
                <div class="icon icon-arrow-down"></div>
            </div>
            <select id="selectCovers"
                    name="covers" aria-label="{{ bookings.email.covers.aria }}"
                    data-label-person="{{ bookings.email.covers.person }}"
                    data-label-people="{{ bookings.email.covers.people }}"></select>
        </div>
        <div class="selector">
            <div class="selector-substitute">
                <div class="icon icon-time"></div>
                <div class="selected-value" id="txtTime">19:30</div>
                <div class="icon icon-arrow-down"></div>
            </div>
            <select name="time" aria-label="{{ bookings.email.time.aria }}">
                <option value="09:00">09:00</option>
                <option value="09:30">09:30</option>
                <option value="10:00">10:00</option>
                <option value="10:30">10:30</option>
                <option value="11:00">11:00</option>
                <option value="11:30">11:30</option>
                <option value="12:00">12:00</option>
                <option value="12:30">12:30</option>
                <option value="13:00">13:00</option>
                <option value="13:30">13:30</option>
                <option value="14:00">14:00</option>
                <option value="14:30">14:30</option>
                <option value="15:00">15:00</option>
                <option value="15:30">15:30</option>
                <option value="16:00">16:00</option>
                <option value="16:30">16:30</option>
                <option value="17:00">17:00</option>
                <option value="17:30">17:30</option>
                <option value="18:00">18:00</option>
                <option value="18:30">18:30</option>
                <option value="19:00">19:00</option>
                <option value="19:30" selected>19:30</option>
                <option value="20:00">20:00</option>
                <option value="20:30">20:30</option>
                <option value="21:00">21:00</option>
                <option value="21:30">21:30</option>
                <option value="22:00">22:00</option>
                <option value="22:30">22:30</option>
                <option value="23:00">23:00</option>
                <option value="23:30">23:30</option>
            </select>
        </div>
        <div class="selector">
            <div class="selector-substitute" id="selectDate">
                <div class="icon icon-date"></div>
                <input  id="bkgDateInput"
                        aria-label="{{ bookings.email.date.aria }}"
                        type="text"
                        class="select-input hide-on-mobile"
                        name="date"
                        autocomplete="off"
                        data-adv-days="30">
                <div class="icon icon-arrow-down hide-on-mobile"></div>
            </div>

        </div>
        <button id="submitButton" type="submit" class="btn" aria-label="bookings.email.submit.aria" disabled>{{ button.bkgRequest }}</button>
    </form>
</div>

<!-- modal -->
<div id="modal" class="modal-overlay">
    <div class="modal-window email">
        <div id="emailRequest" class="form-email-request">
            <form id="emailRequestForm" data-form-instructions="{{ bookings.email.summary.instructions }}">
                <input type="hidden" name="restaurant_name" value="{{ data.name }}">
                <input type="hidden" name="restaurant_email" value="{{ data.email }}">
                <input type="hidden" name="language" value="en">
                <input type="hidden" name="email_system" value="v2">
                <input type="hidden" name="sender" value="{{ data.brand.name }}">
                <!-- Summary -->
                <div class="booking-summary">
                    <h1>{{ bookings.email.summary.title }}</h1>
                    <ul>
                        <li>
                            <span class="icon icon-covers"></span>
                            <span id="partySize"></span>
                        </li>
                        <li>
                            <span class="icon icon-time"></span>
                            <span id="timeSlot"></span>
                        </li>
                        <li>
                            <span class="icon icon-date"></span>
                            <span id="dayDate"></span>
                        </li>
                    </ul>
                </div>
                <h2>{{ bookings.email.summary.instructions }}:</h2>
                <!-- Name -->
                <div class="text-field">
                    <input id="full_name" type="text" name="full_name" placeholder=" " autofocus required tabindex="0">
                    <label for="full_name">Your full name</label>
                </div>
                <!-- Email -->
                <div class="text-field">
                    <input id="email" type="email" name="email" placeholder=" " required>
                    <label for="email">Your Email Address</label>
                </div>
                <p>{{ bookings.email.summary.warning }}</p>
                <!-- Actions -->
                <div class="modal-actions">
                    <button id="btnCancel" type="button" class="btn-cancel">{{ bookings.email.summary.cancel }}</button>
                    <button id="btnSubmit" type="submit" class="btn">{{ bookings.email.summary.send }}</button>
                </div>
            </form>
        </div>
    </div>
    <div class="booking-request-thanks">
        <img src="data:image/png;base64," alt="An email request has been sent"><span>{{ bookings.email.summary.thanks }}</span>
    </div>
</div>
<!-- /RDL BOOKING WIDGET -->
